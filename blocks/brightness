#!/bin/sh

# Fetch current and maximum brightness
current_brightness=$(brightnessctl get)
max_brightness=$(brightnessctl max)

# Calculate brightness percentage
if [ "$max_brightness" -gt 0 ]; then
  brightness_percent=$((current_brightness * 100 / max_brightness))
else
  brightness_percent=0
fi

# Determine the appropriate icon based on brightness percentage
if [ "$brightness_percent" -le 25 ]; then
  icon=""
elif [ "$brightness_percent" -le 50 ]; then
  icon="󰃝"
elif [ "$brightness_percent" -le 75 ]; then
  icon=""
else
  icon=""
fi

# Output the icon (and percentage if desired)
echo -n "$icon"
